{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://app.local/schemas/source-citation.schema.json",
  "title": "SourceCitation",
  "description": "Normalized citation for a research source: identifiers, OA flag, license, and core metadata.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "doi": { "type": "string", "pattern": "^10\\.\\d{4,9}/[-._;()/:A-Za-z0-9]+$" },
    "pmid": { "type": "string", "pattern": "^\\d+$" },
    "url": {
      "type": "string",
      "format": "uri",
      "description": "Canonical URL (if available)"
    },
    "openAccess": {
      "type": "boolean",
      "description": "True if the source is open access."
    },
    "license": { "type": "string" },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "journal": {
      "type": "string",
      "minLength": 1
    },
    "year": {
      "type": "integer",
      "minimum": 1900,
      "maximum": 2100
    },
    "authors": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "minItems": 1,
      "description": "Author list as formatted names (e.g., 'Jane Doe')."
    }
  },
  "required": ["openAccess", "title", "journal", "year", "authors"],
  "anyOf": [
    { "required": ["doi"] },
    { "required": ["pmid"] },
    { "required": ["url"] }
  ]
}
