{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://app.local/schemas/source-citation.schema.json",
  "title": "SourceCitation",
  "description": "Normalized citation for a research source, including identifiers, OA flag, license, and bibliographic metadata.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "doi": {
      "type": "string",
      "description": "Digital Object Identifier (if available)",
      "pattern": "^10\\.\\d{4,9}/[-._;()/:A-Za-z0-9]+$"
    },
    "pmid": {
      "type": "string",
      "description": "PubMed identifier (if available)",
      "pattern": "^\\d+$"
    },
    "url": {
      "type": "string",
      "format": "uri",
      "description": "Canonical URL (if available)"
    },
    "openAccess": {
      "type": "boolean",
      "description": "True if the source is open access."
    },
    "license": {
      "type": "string",
      "description": "License name or code (e.g., CC-BY-4.0)."
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "journal": {
      "type": "string",
      "minLength": 1
    },
    "year": {
      "type": "integer",
      "minimum": 1900,
      "maximum": 2100
    },
    "authors": {
      "type": "array",
      "items": { "$ref": "#/$defs/Author" },
      "minItems": 1
    }
  },
  "required": ["openAccess", "title", "journal", "year", "authors"],
  "anyOf": [
    { "required": ["doi"] },
    { "required": ["pmid"] },
    { "required": ["url"] }
  ],
  "$defs": {
    "Author": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "given": { "type": "string" },
        "family": { "type": "string" },
        "full": { "type": "string" },
        "orcid": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{4}-\\d{4}-\\d{4}$",
          "description": "ORCID iD without url prefix."
        }
      },
      "anyOf": [
        { "required": ["full"] },
        { "required": ["given", "family"] }
      ]
    }
  }
}

