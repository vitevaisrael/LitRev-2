{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://app.local/schemas/model-routing.schema.json",
  "title": "ModelRouting",
  "description": "Chosen model, confidence, escalation flag, and notes.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "chosenModel": { "type": "string", "enum": ["general-small", "general-large", "domain-expert"] },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "escalate": { "type": "boolean" },
    "notes": { "type": "string" }
  },
  "required": ["chosenModel", "confidence", "escalate"]
}

