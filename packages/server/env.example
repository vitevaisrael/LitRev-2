# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/thescientist

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-jwt-secret-here

# Cookies
COOKIE_SECRET=your-cookie-secret-here

# S3/MinIO
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=thescientist

# OpenAI
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7

# Unpaywall
UNPAYWALL_EMAIL=your-email@example.com

# Feature Flags
FEATURE_EXPLORER=true
FEATURE_CHAT_REVIEW=true

# Optional: override host binding (defaults to 127.0.0.1 in dev, 0.0.0.0 in production)
HOST=0.0.0.0

# CORS origins (comma-separated)
ALLOWED_ORIGINS=http://127.0.0.1:5173,http://localhost:5173

# Development environment
NODE_ENV=development
