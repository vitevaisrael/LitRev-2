# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/thescientist

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-jwt-secret-here

# Cookies
COOKIE_SECRET=your-cookie-secret-here

# S3/MinIO
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=thescientist

# OpenAI
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7

# Unpaywall
UNPAYWALL_EMAIL=your-email@example.com

# PubMed Configuration
PUBMED_API_BASE=https://eutils.ncbi.nlm.nih.gov/entrez/eutils
PUBMED_TOOL_NAME=litrev
PUBMED_EMAIL=your-email@example.com
PUBMED_API_KEY=your-pubmed-api-key-here
PUBMED_RATE_LIMIT_RPS=3
PUBMED_SUMMARY_CACHE_TTL_SEC=604800

# Feature Flags
FEATURE_EXPLORER=true
FEATURE_CHAT_REVIEW=true
FEATURE_IMPORT_PDF_BIB=true
FEATURE_IMPORT_DOCX_BIB=true
FEATURE_PUBMED_SEARCH=true
FEATURE_PUBMED_IMPORT=true
FEATURE_PUBMED_EFETCH=false
ENABLE_PUBMED_WORKER=true

# Optional: override host binding (defaults to 127.0.0.1 in dev, 0.0.0.0 in production)
HOST=0.0.0.0

# CORS origins (comma-separated)
ALLOWED_ORIGINS=http://127.0.0.1:5173,http://localhost:5173

# Development environment
NODE_ENV=development

# Auth v2 Configuration - DEV BYPASS MODE
AUTH_MODE=dev_bypass
DEV_AUTO_LOGIN_EMAIL=dev@local
DEV_AUTO_LOGIN_NAME=Dev User
JWT_ACCESS_SECRET=your-jwt-access-secret-here-32-chars-minimum
JWT_REFRESH_SECRET=your-jwt-refresh-secret-here-32-chars-minimum
AUTH_COOKIE_NAME=the_scientist_access
AUTH_REFRESH_COOKIE_NAME=the_scientist_refresh
AUTH_COOKIE_DOMAIN=
AUTH_SECURE_COOKIES=false
AUTH_TRUST_PROXY=false
CORS_CREDENTIALS=true
APP_URL=http://localhost:5173
CORS_ORIGIN=http://localhost:5173
AUTH_REFRESH_COOKIE_NAME=the_scientist_refresh
AUTH_SECURE_COOKIES=false
AUTH_TRUST_PROXY=false
CORS_CREDENTIALS=true
APP_URL=http://localhost:5173
